<main class="flex flex-column justify-around lg:flex-row flex-wrap p-0">

  <section class="min-h-screen justify-center items-center flex flex-col flex-wrap md:flex-row w-full  p-3  m-0" id="hero">
    {{> navbar-homepage}}
    <div
      class="bg-midnight-green-o-85 flex flex-col md:flex-row w-full lg:w-1/2 p-5 sm:p-12 rounded-xl text-off-white shadow-2xl my-20">
      <div class="flex flex-col space-y-8 justify-between ">
        <div class="flex flex-col">
          <h1 class="font-bold text-4xl tracking-wide">My Dog Health App</h1>
          <p class=" pt-2 text-light-green text-sm">This website application is designed to assist dog owners and handlers keep track of information related to their dogs' health.
          </p>
        </div>
      </div>
    </div>
  </section>
  <section class="flex w-full min-h-screen justify-end items-center" id="contact-us">
    <!-- Contact Cards -->

    <div
      class="bg-dark-green-0-85 flex flex-end flex-wrap flex-col md:flex-row space-y-6 md:space-y-0 md:space-x-6 m-3 my-20 w-full lg:w-3/5 xl:w-5/12 p-5 sm:p-5 sm:py-10 rounded-xl shadow-lg text-off-white justify-around">

      <div class="w-full lg:w-1/3">
        <h1 class="font-bold text-4xl tracking-wide">Contact Us!</h1>
        <p class=" pt-2 text-off-white text-sm"> 
        </p>
        <div class="flex flex-col space-y-6 mt-5">
          <div class="inline-flex space-x-2 items-center">
            <ion-icon name="logo-github" class="text-sky-blue text-xl"></ion-icon>
            <a href="https://github.com/maxaeon/mydoghealthapp">Github</a>
          </div>
          <div class="inline-flex space-x-2 items-center">
            <ion-icon name="mail-outline" class="text-sky-blue text-xl"></ion-icon>
            <a href="maxaeonparks@gmail.com">GMail</a>
          </div>
        </div>
      </div>
      <div class="bg-off-white rounded-xl shadow-lg p-8 text-gray-600 w-full lg:w-1/2">
        <form action="" class="flex flex-col space-y-4">
          <div>
            <label for="" class=" text-midnight-green text-sm">Your
              name</label>
            <input id="nameContact" type="text" placeholder="Your name"
              class="ring-1 ring-gray-600 w-full rounded-md mt-2 px-4 py-2 outline-none focus:ring-2 focus:ring-blue-300">
          </div>
          <div>
            <label for="" class=" text-midnight-green text-sm">Email
              Address</label>
            <input id="emailContact" type="text" placeholder="Email Address"
              class="ring-1 ring-gray-600 w-full rounded-md mt-2 px-4 py-2 outline-none focus:ring-2 focus:ring-blue-300">
          </div>
          <div>
            <label for="" class="text-midnight-green text-sm">Message</label>
            <textarea id="messageContent" type="text" placeholder="Message" rows="4"
              class="ring-1 ring-gray-300 w-full rounded-md mt-2 px-4 py-2 outline-none focus:ring-2 focus:ring-blue-300">
                                                    </textarea>
          </div>
          <button id="contactUsSubmit"
            class="inline-block self-end bg-midnight-green font-bold rounded-lg px-6 py-2 uppercase text-sm text-sky-blue">
            Send Message</button>
        </form>
      </div>

    </div>
  </section>
  <section class="flex w-full min-h-screen justify-start items-center" id="about-us">
    <div
      class="bg-dark-green-0-85 flex flex-wrap flex-col md:flex-row space-y-6 md:space-y-0 md:space-x-6 m-3 my-20 w-full lg:w-3/5 xl:w-5/12 p-5 sm:p-5 sm:py-10 rounded-xl shadow-lg text-off-white justify-around">

      <div class="w-full lg:w-4/5">
        <h1 class="font-bold text-4xl tracking-wide">About Us!</h1>
        <p class=" pt-2 text-off-white text-sm">We are a team of graduate students in CSIS at the University of Michigan, Flint.
        </p>
        <div class="flex flex-col lg:flex-row flex-wrap justify-center lg:justify-between my-5">
          <div class="flex flex-col text-center w-60 h-60 lg:h-40 lg:w-40 my-5 mx-auto">
            <a href="https://github.com/maxaeon/" class="rounded-full my-3">
              <img src="https://avatars.githubusercontent.com/u/87254760?v=4" class="rounded-full" alt="">
            </a>
            <p>Maxaeon</p>
          </div>
        </div>
      </div>


    </div>
  </section>
</main>
